<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1000px"
    android:layout_height="match_parent"
    android:layout_marginLeft="50px"

    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_icecream_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ice Cream Shop"
        android:layout_marginTop="50px"
        android:textSize="50px"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="178dp"
        android:layout_marginTop="150px"
        app:srcCompat="@drawable/newice" />

    <TextView
        android:id="@+id/txt_flav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today's Flavour:"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="700px"
        />

    <TextView
        android:id="@+id/Scoop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10 LEFT"
        android:layout_marginTop="800px"
        />

    <TextView
        android:id="@+id/txtdescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I want to order:"
        android:layout_marginTop="800px"
        android:layout_marginLeft="30dp"
        android:maxLines="2"
        android:layout_toRightOf="@+id/Scoop"
        />
    <TextView
        android:id="@+id/txtprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PRICE"
        android:layout_below="@+id/Scoop"
        />



    <TextView
        android:id="@+id/txt_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I want to order:"
        android:layout_marginTop="950px"
        />


    <EditText
        android:id="@+id/scoopnumber"
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:layout_marginTop="900px"
        android:layout_toRightOf="@id/txt_order"/>

    <TextView
        android:id="@+id/txt_scoop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/scoopnumber"
        android:text="scoops of ice cream"
        android:layout_marginTop="950px"
        android:layout_marginLeft="20px"
        />
    <Button
        android:id="@+id/btnPlaceOrder"
        android:layout_width="400px"
        android:layout_height="wrap_content"
        android:text="PLACE ORDER"
        android:background="#0000FF"
        android:textColor="#FFFFFF"
        android:layout_marginTop="1050px"
        android:layout_marginLeft="100px"
        />


    <Button
        android:id="@+id/btnRestock"
        android:layout_width="400px"
        android:layout_height="wrap_content"
        android:text="RESTOCK"
        android:layout_toRightOf="@id/btnPlaceOrder"
        android:layout_marginTop="1050px"
        android:layout_marginLeft="70px"
        android:background="#0000FF"
        android:textColor="#FFFFFF"
        />


    <TextView
        android:id="@+id/finalprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="1200px"
        android:layout_marginLeft="100dp"
        />
</RelativeLayout>